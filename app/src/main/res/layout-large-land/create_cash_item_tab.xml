<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/grey_400"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="@color/blue_gray_400">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.6"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/tab1_item"
        android:textSize="@dimen/seve_inch_tab_itemTab_textSize"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="@string/tab1_price"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/seve_inch_tab_itemTab_textSize"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/tab1_Qty"
            android:textColor="@color/white"
            android:textSize="@dimen/seve_inch_tab_itemTab_textSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center"
            android:text="@string/tab1_total"
            android:textColor="@color/white"
            android:textSize="@dimen/seve_inch_tab_itemTab_textSize"
        />
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/layout_marginTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ET_item_CI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:background="@color/blue_500_100"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:nextFocusDown="@+id/ET_price_CI"/>
        <EditText
            android:id="@+id/ET_price_CI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:nextFocusDown="@+id/ET_qty_CI"/>
        <EditText
            android:id="@+id/ET_qty_CI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:background="@color/blue_500_100"
            android:inputType="number"
            android:textAlignment="center"
            android:nextFocusDown="@+id/ET_total_CI"/>
        <EditText
            android:id="@+id/ET_total_CI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:inputType="numberDecimal"
            android:textAlignment="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/ItemTabSubmitBtn"
        android:background="@color/grey_100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button"
        android:textSize="@dimen/seve_inch_tab_itemTab_textSize"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>